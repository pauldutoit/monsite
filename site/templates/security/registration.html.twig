{% extends 'base.html.twig' %}


{% block body %}

<style>
    .example-wrapper { margin: 3em auto; max-width: 400px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class='example-wrapper'>
    <h1 style="text-align:center">S'inscrire</h1>
{{form_start(form)}}
{{form_row(form.email, {'label': 'Adresse Email', 'attr':{'placeholder':'Email...'}})}}
{{form_row(form.password, {'label': 'Mot de passe', 'attr':{'placeholder':'Mot de passe...'}})}}
{{form_row(form.confirm_password, {'label': 'Confirmer le mot de passe', 'attr': {'placeholder':'Mot de passe...'}})}}
<button type="submit" class="btn btn-primary">Inscription!</button>
{{form_end(form)}}
</div>
{% endblock %}
