{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

</style>

{% for article in articles %}
<div class="d-inline-block">
    <section class='articles' style="margin:10px;">
        <h2>{{ article.title }}</h2>
        <div class='metadata'>Ecrit le {{ article.createdAt | date('d/m/Y')}} Ã  {{ article.createdAt | date('H:i')}}<div>
        <img src="{{ article.image }}" alt="{{ article.image }}">
        <p>{{ article.description }}</p>
        <a href="{{ path('article_show',{'id': article.id})}}" class="btn btn-primary">Lire la suite</a>
    </section>
</div>
{% endfor %}  
{% endblock %}
